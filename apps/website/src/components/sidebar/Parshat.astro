---
import ShadowBox from "@/components/ui/ShadowBox.astro";
import { getParshat, getParshatImage, formatDate } from "@/lib/shared/calendar";

const { title, date, image } = Astro.props;

const today = new Date();
const parshat = getParshat();
const parshatImage = getParshatImage(parshat);
---

<div class="contents">
  <ShadowBox>
    <div class="py-5 px-6 xs:py-7 xs:px-8 md:py-3 md:px-4 lg:p-4 bg-slate-50">
      <a
        href="https://it.chabad.org/parshah/default_cdo/jewish/Torah-Portions.htm"
      >
        <h2
          class="text-blue-950 font-medium font-display text-2xl md:text-xl lg:text-2xl leading-tight uppercase"
        >
          <span class="md:hidden">Parshat:</span>
          <span>{parshat}</span>
        </h2>
        <p class="italic font-raleway text-neutral-500 text-sm mb-1">
          {formatDate(today)}
        </p>
        <img src={parshatImage} alt="icon" /></a
      >
    </div>
  </ShadowBox>
</div>
