---
const {
  associazione,
  nome,
  data,
  immagine,
  citta
} = Astro.props
---

<div class="stack place-items-center mx-5 w-60 aspect-square ">
  <img
    src={immagine}
    alt="immagine a caso"
    class="w-full h-full opacity-20"
  />
  <div class="w-full h-full bg-black opacity-50"></div>
  <div class="z-10 flex flex-col justify-center gap-y-1">
    <h3
      class="text-white font-display text-2xl uppercase text-center "
      style="text-shadow: 0 0 5px rgb(37, 37, 37)">
      {nome}
    </h3>
    <div class="flex flex-col gap-1 items-center justify-center">
      <p class="text-white font-display text-sm md:text-base uppercase"
      style="text-shadow: 0 0 5px rgb(37, 37, 37)">
        {associazione}
      </p>
      <div class="bg-white h-[1px] w-1"></div>
      <p class="text-white font-display text-sm md:text-base uppercase"
      style="text-shadow: 0 0 5px rgb(37, 37, 37)">{citta}</p>
    </div>
    <p class="text-white font-display text-sm md:text-base uppercase mx-auto"
    style="text-shadow: 0 0 5px rgb(37, 37, 37)">{data}</p>
  </div>
</div>
